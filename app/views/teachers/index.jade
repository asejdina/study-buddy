extends ../shared/template

block content
  include ../shared/navbar
  h1 Welcome Teacher

  button#createCourse Create a Course

  #courses

  #pastCourses
    h1 Previously Created Courses
    each course in courses
      .pastCourse
        h3.courseTitle= course.title
        h4 Date Created:
        p= course.date
        h4 Enrolled Students:
        p course.students







block scripts
