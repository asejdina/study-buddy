extends ../shared/template

block content
  .testDivButton
    form#login(action='/login' method='POST')
      h4 User Name:
      input.email(type='email' name='email' placeholder='Email' autofocus=true)
      h4 Password:  
      input.password(type='password' name='password')
      input.login-type(type='hidden' name='loginType' value='#{loginType}')
      button#submitUser Submit
